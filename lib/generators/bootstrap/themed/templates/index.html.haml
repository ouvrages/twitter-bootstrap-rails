%h1= t(".title", :default => [:"resource.title.index", <%= model_name %>.model_name.human(:count => :other)])
%table.table.table-striped
  %thead
    %tr
      %th= t(".id", :default => [:"resource.id", "ID"])
      <%- unless columns.empty? -%>
      %th
        = t("activerecord.attributes.<%= singular_controller_routing_path %>.<%= columns.first.name %>", :default => t("activerecord.labels.<%= columns.first.name %>", :default => "<%= columns.first.name.capitalize %>"))
      <%- end -%>
      %th= <%= model_name %>.human_attribute_name(:created_at)
      %th= t(".actions", :default => [:"resource.actions", "Actions"])
  %tbody
    - @<%= plural_resource_name %>.each do |<%= resource_name %>|
      %tr
        %td= <%= resource_name %>.id
        <%- unless columns.empty? -%>
        %td= link_to <%= resource_name %>.<%= columns.first.name %>, <%= singular_controller_routing_path %>_path(<%= resource_name %>)
        <%- end -%>
        %td= l(<%= resource_name %>.created_at)
        %td
          = link_to t(".show", :default => [:"resource.show", "Show"]), <%= singular_controller_routing_path %>_path(<%= resource_name %>), :class => 'btn btn-mini' if can? :read, <%= resource_name %>
          = link_to t(".edit", :default => [:"resource.edit", "Edit"]), edit_<%= singular_controller_routing_path %>_path(<%= resource_name %>), :class => 'btn btn-mini' if can? :update, <%= resource_name %>
          = link_to t(".destroy", :default => [:"resource.destroy", "Destroy"]), <%= singular_controller_routing_path %>_path(<%= resource_name %>), :method => :delete, :confirm => "#{t(".destroy_confirm", :default => [:"resource.destroy_confirm", "Are you sure?"])}", :class => 'btn btn-mini btn-danger' if can? :destroy, <%= resource_name %>

= link_to t(".new", :default => [:"resource.new", "New"]), new_<%= singular_controller_routing_path %>_path, :class => 'btn btn-primary' if can? :create, <%= model_name %>
